{
  // Disable AL Language extension for this workspace
  // This is NOT an AL code project - it's for BC page scripting automation
  "al.enableCodeActions": false,
  "al.enableCodeAnalysis": false,
  "al.packageCachePath": "",
  "al.enableExternalRulesets": false,
  
  // Prevent AL extension from creating .alpackages and .snapshots
  "files.watcherExclude": {
    "**/.alpackages/**": true,
    "**/.snapshots/**": true
  }
}
